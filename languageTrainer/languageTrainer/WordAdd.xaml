<Window x:Class="languageTrainer.WordAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:languageTrainer"
        mc:Ignorable="d"
        Title="WordAdd" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="foreignBox" HorizontalAlignment="Left" Height="20" Margin="80,60,0,0" TextWrapping="Wrap" Text="Foreign word" VerticalAlignment="Top" Width="100" TextAlignment="Center" GotFocus="foreignBox_GotFocus"/>
        <TextBox x:Name="translatedBox" HorizontalAlignment="Left" Height="20" Margin="240,60,0,0" TextWrapping="Wrap" Text="Translated word" VerticalAlignment="Top" Width="100" TextAlignment="Center"/>
        <Button x:Name="addButton" Content="Add word" HorizontalAlignment="Left" Margin="360,60,0,0" VerticalAlignment="Top" Width="60" Height="20" Click="addButton_Click"/>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="140" Margin="80,100,0,0" VerticalAlignment="Top" Width="360"/>
        <Button x:Name="removeItemButton" Content="Remove Word" HorizontalAlignment="Left" Margin="80,260,0,0" VerticalAlignment="Top" Width="100" Click="removeItemButton_Click"/>

    </Grid>
</Window>
